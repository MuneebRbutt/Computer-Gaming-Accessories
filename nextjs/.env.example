# Database Configuration - MongoDB
DATABASE_URL="mongodb://localhost:27017/gaming_ecommerce"
# For MongoDB Atlas (cloud):
# DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/gaming_ecommerce?retryWrites=true&w=majority"
# For local MongoDB with authentication:
# DATABASE_URL="mongodb://username:password@localhost:27017/gaming_ecommerce?authSource=admin"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-change-in-production"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Email Service (Resend)
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="noreply@yourdomain.com"
ADMIN_EMAIL="admin@yourdomain.com"

# Redis Caching (Optional but recommended for production)
REDIS_URL="redis://localhost:6379"

# Admin Panel Configuration
ADMIN_EMAILS="admin@yourdomain.com,superadmin@yourdomain.com"
SUPER_ADMIN_EMAIL="superadmin@yourdomain.com"

# Analytics & Monitoring
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="your_hotjar_id"

# File Upload (UploadThing)
UPLOADTHING_SECRET="sk_live_your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key"
